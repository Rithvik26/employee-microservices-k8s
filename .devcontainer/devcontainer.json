{
    "name": "Employee Microservices Platform - Professional Setup",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "features": {
      "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-kubernetes-tools.vscode-kubernetes-tools",
          "ms-python.python",
          "ms-vscode.vscode-yaml",
          "redhat.vscode-yaml"
        ]
      }
    },
    "runArgs": [
      "--cap-add=SYS_PTRACE",
      "--security-opt=seccomp=unconfined",
      "--privileged",
      "--init"
    ],
    "postCreateCommand": "echo 'Environment ready! To setup Kubernetes, run: ./scripts/setup-dev-environment.sh'",
    "forwardPorts": [8080, 8081, 8082, 9090],
    "remoteUser": "codespace"
  }